
[TOOL PRODUCT DOCUMENT - extends specification] Same as HARDWARE PRODUCT document. Contains all option for a particular tool such as hex keys, screwdrivers, compression cutters etc. Tool-objects match to Tool-product options.

{
	"name": "value",
	"identifier": "value",
	"description": "string",
	"version": "1.0.0",
	"tool-type": "value",
	"options": {
		"choices": {},
		"sizes": {},
		"material": {},
		"properties": {},
		"manufacturing-standard": {}
	},
	"schema": "$ref:schema/fabbed/tool-product"
}

e.g.

{
	"name": "Hex key",
	"identifier": "hex-key",
	"description": "A hex key, Allen key or Allen wrench is a tool used to drive bolts and screws with hexagonal sockets in their heads.",
	"version": "1.0.0",
	"tool-type": "$ref:schema/fabbed/tool-family/hand-tools",
	"options": {
		"choices": {
			"name": "choices",
			"description": "choices of hex key",
			"values": [
				{
					"name": "Standard",
					"identifier": "STD",
					"description": "Standard Hex Key"
				},
				{
					"name": "Hex-Plus",
					"identifier": "HPS",
					"description": "Hex-Plus offers a bigger contact surface in the screw head, and so reduces the chance of wear and rounding off the corners in Allen head screws."
				},
				{
					"name": "Ball head",
					"identifier": "BHD",
					"description": "Allows the key to be easily inserted into the head and permits the key to be turned at an angle while used, which is very useful in tight corners."
				}
			]
		},
		"sizes": {
			"names": "sizes",
			"description": "hex key sizes",
			"values": [
				{
					"name": "hex size",
					"description": "Hex key head sizes",
					"options": {
						"metric": "$ref:entity/fabbed/dimension-collection/standard-metric-hex-key-head-sizes",
						"imperial" "$ref:entity/fabbed/dimension-collection/standard-imperial-hex-key-head-sizes"
					}
				},
				{
					"name": "long arm length",
					"description": "hex key long arm length",
					"options": {
						"unit-system": {
							"metric": "$ref:entity/fabbed/unit/mm",
							"imperial": "$ref:entity/fabbed/unit/inch"
						},
					"quantity": "value"
					}
				},
				{
					"name": "short arm length",
					"description": "hex key short arm length",
					"options": {
						"unit-system": {
							"metric": "$ref:entity/fabbed/unit/mm",
							"imperial": "$ref:entity/fabbed/unit/inch"
						},
					"quantity": "value"
					}
				}		
			]
		},
		"material": {
			"name": "materials",
			"description": "material choices",
			"values": []
		},
		"properties": {
			"name": "properties",
			"description": "Other specific hex key properties",
			"values": []
		},
		"manufacturing-standard": {
			"name": "manufacturing-standard",
			"description": "List of manufacturing standards.",
			"values": []	
		}		
	},
	"schema": "$ref:schema/fabbed/tool-product"
}